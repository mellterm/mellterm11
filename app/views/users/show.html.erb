			<h1>
				<%= gravatar_for (@user) %>
				<%= @user.name %> 
			</h1>
		</td>
		
		<td class="sidebar round">
			<strong>Name</strong> <%= @user.name %>  <br />
			<strong>URL</strong> <%= link_to user_path(@user.id),user_path(@user.id) %> 
		</td>
	</tr>
	
	
	</table>


<strong>Phone:</strong> <%= @user.phone %> <br/>
 
