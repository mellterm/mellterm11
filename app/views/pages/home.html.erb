<% if signed_in? %>

	<table class="front" summary="For signed-in users">
		<tr>
			<td class="main">
				
				<h1 class="searchterm">Need Term?</h1>
				<%= link_to "Search terms!", searches_path, :class => "search_button round" %>
				
				<h1 class="term">Got Term?</h1>
				<%= render 'shared/term_form' %>
				
				
				<h1 class="searchfeed">Your Latest Feeds</h1>
				
				<%= render 'shared/feed' %>
		
				
				
			</td>
			<td class="sidebar round">
				<%= render 'shared/user_info' %>
				<%= render 'shared/subscriptions_stats' %>				
			</td>	
			
			</tr>
	</table>		
			
<% else %>
<h1>Welcome to Mellterm</h1>
<p>This is the home page for <a href="http://www.mellterm.net">
	Mellterm Translation and Terminology</a>.
</p>

<%= link_to "Sign Up Now", signup_path, :class => "signup_button round"%>

<% end %>