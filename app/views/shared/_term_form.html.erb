<%= form_for(@term) do |f| %>
	<%= render 'shared/error_messages', :object => f.object %>
	<div class="field">
		<%= f.label :source_language, "From" %><br /> 
		<%= f.select(:source_language_id, Language.all.collect {|p| [p.code, p.id]}) %>
	</div>
		<div class="field">
		<%= f.label :source_content, "Source" %><br /> 
		<%= f.text_area :source_content %>
	</div>
		<div class="field">
		<%= f.label :target_language, "To" %><br /> 
		<%= f.select(:target_language_id, Language.all.collect {|p| [p.code, p.id]}) %>
	</div>
	<div class="field">
		<%= f.label :target_content, "Target" %><br />  
		<%= f.text_area :target_content %>
	</div>
			<div class="field">
		<%= f.label :domain_id, "Domain" %><br /> 
		<%= f.select(:domain_id, Domain.all.collect {|p| [p.long_name, p.id]}) %>
	</div>
	<div class="field">
		<%= f.label :notes, "Notes" %><br />  
		<%= f.text_area :notes %>
	</div>
	<div class="actions">
		<%= f.submit "Submit Term" %>
	</div>



<% end %>