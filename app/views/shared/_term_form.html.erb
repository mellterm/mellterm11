<%= form_for(@term) do |f| %>
	<%= render 'shared/error_messages', :object => f.object %>
	<div class="field">
		<%= f.label :source_language, "From" %><br /> 
		<%= f.collection_select(:source_language_id, Language.all, :id, :code) %>
	</div>
		<div class="field">
		<%= f.label :source_content, "Source" %><br /> 
		<%= f.text_area :source_content %>
	</div>
		<div class="field">
		<%= f.label :target_language, "To" %><br /> 
		<%= f.collection_select(:target_language_id, Language.all, :id, :code) %>
	</div>
	<div class="field">
		<%= f.label :target_content, "Target" %><br />  
		<%= f.text_area :target_content %>
	</div>
	<div class="field">
		<%= f.label :domain_id, "Domain" %><br /> 
		<%= f.collection_select(:domain_id, Domain.all, :id, :long_name) %>
	</div>
	<div class="field">
		<%= f.label :notes, "Notes" %><br />  
		<%= f.text_area :notes %>
	</div>
	<div class="field">
		<%= f.check_box :is_public %>
		<%= f.label :is_public, "Public" %> 
	</div>
		<div class="field">
		<%= f.check_box :is_query %>
		<%= f.label :is_query, "Query" %> 
	</div>
	<div class="actions">
		<%= f.submit "Submit Term" %>
	</div>



<% end %>