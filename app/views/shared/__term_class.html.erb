<% if object.is_public? %>	
	<% if object.is_query? %>		
			<span class="query">
	<% end %>
	
	<%= link_to term_path(object) do %>
	<span class="source_content"><%= object.source_content %></span>
	<% end %>
	
	<span class="source_language"><%= Language.find(object.source_language_id).code %></span><br/>	
	<span class="target_content"><%= object.target_content %></span>
	<span class="target_language"><%= Language.find(object.target_language_id).code %></span><br />
	
	<% if object.is_query? %>		
			</span>
	<% end %>
									
<% else %>
 
	<span class="source_content"><%= object.source_content  %></span>
	<span class="source_language"><%= Language.find(object.source_language_id).code %></span>
	<br/>
		<%= link_to do %>
			<span class="hidden_target_content"><%= "Click to purchase" %></span>
		<% end %>
			<span class="target_language"><%= Language.find(object.target_language_id).code %></span>
			<br />
	<% end %>
	
	<span class="domain"><%= Domain.find(object.domain_id).code %> | 
						<%= Domain.find(object.domain_id).long_name %>
	<span class="timestamp">
			First created <%= time_ago_in_words(object.created_at) %> ago.<br/>
			Last updated <%= time_ago_in_words(object.updated_at) %> ago.
		</span>
		</td>
		
		<% user = object.user rescue User.find(object.user_id) #workaround lesson11 %>
		<% if current_user?(user)%>
<td>
	<%= link_to "delete", object, 		:method => :delete,
									 	:confirm => "Are you sure?"
 										%>
									 										 	
</td>
<% end %>