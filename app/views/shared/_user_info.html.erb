<div class="user_info">
	<a href="<%= user_path(current_user) %>">
	<%= gravatar_for current_user, :size => 30 %>
	<span class="user_name">
	<%= current_user.name %>
	</span>
	<span class="terms">
		<%= pluralize(current_user.providers.first.translations.count, "translation") %>
	</span>
	</a>
</div>	