<h1>Listing jobs</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Company</th>
    <th>Invoiced amount</th>
    <th>Currency</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @jobs.each do |job| %>
  <tr>
    <td><%= job.name %></td>
    <td><%= Company.find_by_id(job.company_id).code %></td>
    <td><%= job.invoiced_amount %></td>
    <td><%= Currency.find_by_id(job.currency_id).name %></td>
    <td><%= link_to 'Show', job %></td>
    <td><%= link_to 'Edit', edit_job_path(job) %></td>
    <td><%= link_to 'Destroy', job, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

