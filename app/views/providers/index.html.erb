<h1><%= gravatar_for current_user%> 
	Your Providers </h1>

<% if @providers.any? %>
	<table class="terms" summary="User own terms">
	
		<% for provider in @providers %>
			<tr>
			<%= render 'shared/providers', :provider => provider %>
			</tr>
		<% end %>
	</table>
		
<% end %>
<%= link_to 'New Provider', new_provider_path %>
