<table class="profile" summary="Profile information">
	<tr>
		<td class="main">
			<h1>
				Provider Page
			</h1>
		
		<div class="field">
		<b>Name:</b>
  		<%= @provider.name %>
		</div>
		
		<div class="field">
  			<b>Source language:</b>
  			<%= Language.find_by_id(@provider.source_language_id).code %>
		</div>

		<div class="field">
  			<b>Target language:</b>
  			<%= Language.find_by_id(@provider.target_language_id).code %>
		</div>
		<% if @provider.notes? %>
		<div class="field">
  			<b>Notes:</b>
  			<%= @provider.notes %>
		</div>
		<% end %>	
		<div class="field">
  			<b>Default domain:</b>
  			 <%= Domain.find_by_id(@provider.default_domain_id).code %>
		</div>
 	
		<div class="field">
		 <b>Default is query:</b>
  <%= @provider.default_is_query %>
  		</div>

		<div class="field">
  <b>Default is public:</b>
  <%= @provider.default_is_public %>
		</div>
		
		<div class="field">
  		<b>Default source:</b>
  		<%= Source.find_by_id(@provider.default_source_id).name %>
		</div>
<%= link_to 'Edit', edit_provider_path(@provider) %> |
<%= link_to 'Back', providers_path %>
		
			
</td>
		
		<td class="sidebar round">
			<strong>Current User</strong> <br /><%= current_user.name %><br />
			<strong>Provider Owner</strong> <br /><%= @provider.user_id %><br />
			
			<strong>URL</strong> <%= link_to user_path(current_user), current_user %><br />
	
			
		</td>
	</tr>
	
	
</table>
	
	
	
	

  
